<Page
    x:Class="UWP_DX11_XAML_.DirectXPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_DX11_XAML_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<SwapChainPanel x:Name="swapChainPanel">
		<Grid>
			<TextBlock Text="Hello from you!"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               FontSize="30" />
			<Button x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="528,375,0,0" VerticalAlignment="Top" Height="64" Width="124" Click="button_Click"/>
			<Button x:Name="button1" Content="Stop" HorizontalAlignment="Left" Margin="1034,407,0,0" VerticalAlignment="Top" Height="58" Width="103" Click="button1_Click"/>
		</Grid>
	</SwapChainPanel>

	<Page.BottomAppBar>
		<AppBar x:Name="bottomAppBar" Padding="10,0,10,0">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<AppBarButton AutomationProperties.Name="Sample Button"
                      AutomationProperties.AutomationId="SampleAppBarButton"
                      Click="AppBarButton_Click"/>
			</StackPanel>
		</AppBar>
	</Page.BottomAppBar>
</Page>
